@model ContactListDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/Admin/Contact/Index">ContactList</a></li>
                    <li class="breadcrumb-item active">ReadContact</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Read Contact</h4>
                <p class="card-subtitle mb-4">It is important that you fill out the information completely. </p>

                <form method="post">
                    <div class="row">
                        <input type="hidden" asp-for="ContactId" />
                        <div class="col col-md-6">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" readonly class="form-control" asp-for="Name">
                         
                            </div>
                            <div class="form-group">
                                <label>Surname</label>
                                <input type="email" readonly class="form-control" asp-for="Surname">
                            
                            </div>
                        </div>
                        <div class="col col-md-6">
                            <div class="form-group">
                                <label>Subject</label>
                                <input type="text" readonly class="form-control" asp-for="Subject">
                        
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input readonly type="text" class="form-control" asp-for="Email">
                            
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-md-12">
                            <div class="form-group">
                                <textarea readonly class="form-control" asp-for="Text" rows="10"></textarea>
                            </div>
                        </div>
                    </div>
                    <a href="/Admin/Contact/Index" type="submit" class="btn btn-warning waves-effect waves-light"><i class="mdi mdi-step-backward-2"></i> Back to the list </a>
                </form>
            </div> <!-- end Authord-body-->
        </div> <!-- end Authord-->
    </div> <!-- end col -->
</div>
<!-- end row-->
