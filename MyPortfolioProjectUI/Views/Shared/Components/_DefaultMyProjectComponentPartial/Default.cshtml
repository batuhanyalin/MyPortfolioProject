@model List<ProjectListDto>
<section class="ftco-section ftco-project" id="projects-section">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h1 class="big big-2">Projects</h1>
                <h2 class="mb-4">My Projects</h2>
                <p>You can click on the project names to navigate to their GitHub links.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="project img ftco-animate d-flex justify-content-center align-items-center" style="background-image: url(@item.ImageUrl);">
                        <div class="overlay"></div>
                        <div class="text text-center p-4">
                            <span style="font-size:x-small">@item.Date</span>
                            <h3><a href="@item.Url">@item.Title</a></h3>
                            <p style="font-size:x-small;color:white">
                              @item.Description
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>