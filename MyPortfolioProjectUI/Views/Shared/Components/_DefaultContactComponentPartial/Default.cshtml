@model ContactCreateDto
<section class="ftco-section contact-section ftco-no-pb" id="contact-section">
    <div class="container">
        @await Component.InvokeAsync("_DefaultContactInfoComponentPartial")
        <div class="row no-gutters block-9">
            <div class="col-md-6 order-md-last d-flex">
                <form method="post" asp-action="Contact" asp-controller="Default" class="bg-light p-4 p-md-5 contact-form">
                    <div class="form-group">        
                        <div class="row">
                            <div class="col">
                                <span style="font-size:small" class="text-dark">Fill out the information completely and in the correct format.</span>
                            </div>
                        </div>
                        <input type="hidden" asp-for="Date" value="@DateTime.Now" />
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" asp-for="Name" required placeholder="Your Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" asp-for="Surname" required placeholder="Your Surname">
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" asp-for="Email" required placeholder="Your Email">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Subject" required placeholder="Subject">
                        <span class="text-danger" asp-validation-for="Subject"></span>
                    </div>
                    <div class="form-group">
                        <textarea cols="30" rows="7" class="form-control" asp-for="Text" required placeholder="Message"></textarea>
                        <span class="text-danger" asp-validation-for="Text"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>
            <div class="col-md-6 d-flex">
                <div class="img" style="background-image: url(/clark-master/images/about.jpg);"></div>
            </div>
        </div>
    </div>
</section>